<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" version="6.0">
  <display-name>luggage_tracker_demo</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LuggageControllerServlet</servlet-name>
    <servlet-class>com.hansixue.tracker.luggage.LuggageControllerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.hansixue.tracker.luggage.TestServlet</servlet-class>
  </servlet>
  <!--
  <servlet-mapping>
    <servlet-name>LuggageControllerServlet</servlet-name>
    <url-pattern>/LuggageControllerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>
   -->
  <resource-ref>
    <res-ref-name>jdbc/luggage_tracker_demo</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Application</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
    <injection-target>
      <injection-target-class>jdbc</injection-target-class>
      <injection-target-name>luggage_tracker_demo</injection-target-name>
    </injection-target>
  </resource-ref>
  <listener>
    <listener-class>com.hansixue.tracker.luggage.MyServletContextListener</listener-class>
  </listener>
</web-app>